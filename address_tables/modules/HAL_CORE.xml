<?xml version="1.0" encoding="utf-8"?>
<!--This hosts Core logic of the hardware layer
it runs on an asynchronous clock sources from an oscillator that
is guaranteed to always be running -->
<!-- To minimize clock domain crossings, whereever possible
control logic should run NOT on this asynchronous domain -->
<node id="HAL_CORE">
  <node id="CLOCKING" address="0x1">
    <node id="MMCM_LOCKED"         mask="0x1" permission="r"  description=""/>
    <node id="RESET_MMCM"          mask="0x2" permission="rw" description=""/>
    <node id="SELECT_FELIX_CLK"    mask="0x4" permission="rw" description=""/>
  </node>
</node>
